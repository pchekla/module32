@model List<CoreStartApp.Models.Db.Request>
@{
    ViewData["Title"] = "История запросов";
}

<div class="container">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-4">История запросов</h1>
            <p class="lead text-muted">Логирование всех запросов к приложению</p>
            <div class="text-center">
                <a asp-action="ClearLogs" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите очистить все логи?');">
                    Очистить историю запросов
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Дата и время</th>
                                    <th>URL</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model)
                                {
                                    <tr>
                                        <td>@request.Date.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                        <td>@request.Url</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 